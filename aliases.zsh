#=== General ===#

alias vi="nvim"
alias vim="nvim"
alias zshrc="vim ~/.zshrc && source ~/.zshrc"
alias nvimrc="vim ~/dotfiles/nvim.lua"

#=== Alt Apps ===#

alias ls="lsd"
