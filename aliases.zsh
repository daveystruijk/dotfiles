alias ping="gping"

#=== Git ===#

alias glog="git log --graph --all --full-history --pretty=format:'%C(dim white)%h%C(auto) %s %C(dim white)(%aN, %as)%n         %C(auto)%D %n'"

#=== Infosec ===#

alias nmap_hosts="sudo nmap -sP"
alias nmap_full="sudo nmap -sV -oN nmap.txt"

